<%= form_with(model: fight, local: true,:html => {:class => 'form-horizontal'}) do |form| %>
  <% if fight.errors.any? %>
    <div class="row">
      <div class="col-12">
        <div id="error_explanation">
          <h2><%= pluralize(fight.errors.count, "error") %> prohibited this fight from being saved:</h2>
          <ul>
            <% fight.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col-12">
      <div class="form-row">
        <div class="form-group col-sm-6">
          <%= form.label :player_1 %>
          <%= form.collection_select :player_1, Player.all, :id, :player_name, {}, {:class=>'form-control'} %>
          <%= form.collection_select :weapon_1, Weapon.all, :id, :name, {}, {:class=>'form-control'} %>
        </div>
        <div class="form-group col-sm-6">
          <%= form.label :player_2 %>
          <%= form.collection_select :player_2, Player.all, :id, :player_name, {}, {:class=>'form-control'} %>
          <%= form.collection_select :weapon_2, Weapon.all, :id, :name, {}, {:class=>'form-control'} %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-12">
      <%= form.submit "fight", class: "btn btn-success btn-lg btn-block" %>
    </div>
  </div>
<% end %>