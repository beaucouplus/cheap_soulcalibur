<div class="container">
  <div class="card mt-5">
    <div class="card-body">
      <h1 class="card-title">FIGHT</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card-group">
        <div class="card text-white bg-primary mt-5">
          <div class="card-header">
            <h2 class="text-center"> <%= @fight.first_player.player_name %></h2>
          </div>
          <div class="card-body">
            <%= image_tag @fight.first_player.image, class:"img-thumbnail mx-auto d-block" %>
            <%= link_to 'Attack', play_path(player: @fight.first_player), remote: true, class:"btn btn-block btn-danger btn-lg mt-3" %>
          </div>
          <div class="card-footer">
            <div class="progress" id="life_1st">
              <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>
        <div class="card bg-danger text-white mt-5">
          <div class="card-header">
            <h2 class="text-center">Things happen</h2>
          </div>
          <div class="card-body" id="ring">
            Kikou
          </div>
          <div class="card-footer">
          </div>
        </div>
        <div class="card bg-dark text-white mt-5">
          <div class="card-header">
            <h2 class="text-center"> <%= @fight.second_player.player_name %></h2>
          </div>
          <div class="card-body">
            <%= image_tag @fight.second_player.image, class:"img-thumbnail mx-auto d-block" %>
            <%= link_to 'Attack', play_path(player: @fight.second_player), remote: true, class:"btn btn-block btn-danger btn-lg mt-3" %>
          </div>
          <div class="card-footer">
            <div class="progress" id="life_2nd">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>