<%= form_with(model: player, local: true) do |form| %>
  <% if player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>
      <ul>
        <% player.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-12">
      <div class="form-row">
        <div class="form-group col-sm-6">
          <%= form.label :player_name %>
          <%= form.text_field :player_name, id: :player_player_name, class: 'form-control' %>
          <%= form.label :image %>
          <div class="custom-file">
            <%= form.file_field :image, id: :player_image, class: 'custom-file-input' %>
            <label class="custom-file-label" for="customFile">Choose file</label>
          </div>
          <%= form.collection_select(:feature_ids, Feature.all, :id, :feature_name,
                              {}, {:class=>'form-control', :multiple => true} ) %>
        </div>
        <div class="form-group col-sm-6">
          <%= form.label :life_points %>
          <%= form.number_field :life_points, id: :player_life_points, class: 'form-control', placeholder:'must be between 70 and 100' %>
          <%= form.label :attack_points %>
          <%= form.number_field :attack_points, id: :player_attack_points, class: 'form-control', placeholder: 'must be between 15 and 30' %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-12">
      <%= form.submit "Add player", class: "btn btn-danger btn-lg btn-block" %>
    </div>
  </div>
<% end %>